{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Mines in Australia",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/main/ne.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/main/ne.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_lakes"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/main/ne.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_rivers_lake_centerlines"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/main/Data/Mining_map.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"},"stroke": "black", 
        "strokeWidth": 0.5},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "color": {
          "field": "Commodity Group",
          "type": "nominal",
          "scale": {"domain": [
              "Base metals", "Battery/Alloy metals", "Bauxite", "Coal", "Diamond", 
              "Heavy mineral sands", "Iron ore", "Lithium", "Other metals", 
              "Precious metals", "Rare earth elements", "Uranium"
            ], 
            "range": [
              "#8dd3c7", "#ffffb3", "#bebada", "#fb8072", "#80b1d3", "#fdb462", 
              "#b3de69", "#fccde5", "#d9d9d9", "#bc80bd", "#ccebc5", "#ffed6f"
            ]}
        }
        
        
      }
    }
  ]
}